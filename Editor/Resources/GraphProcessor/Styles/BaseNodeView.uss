#node-border > #title {
    height: 30px;
}

#title > #title-label {
    margin-left: 2px;
    align-self: center;
    flex-wrap: Wrap;
    flex-grow: 1;
}
#title > #title-button-container {
    visibility: hidden;
    display: none;
}

#divider{
    background-color:rgba(255, 128, 0, 1);
}

.node-controls{
    background-color:rgba(50, 50, 50, 1);
}

.highlight {
    background-color: rgba(0, 255, 255, 1);
    border-radius: 7px
}

#top-port-container{
    height: 15px;
    min-height: 15px;
    max-height: 15px;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    background-color: rgba(66, 140, 66, 1);
}

#bottom-port-container{
    height: 15px;
    min-height: 15px;
    max-height: 15px;
    justify-content: center;
    align-items: center;
    flex-direction: row;
    background-color: rgba(160, 100, 60, 1);
}